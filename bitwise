import java.util.*;
class Bitwise
{
	public static void main(String args[])
	{
	int n;
	System.out.println("enter any value");
	Scanner s=new Scanner(System.in);
	n=s.nextInt();
	if((n&1)==1)
	{
	System.out.println("given number is odd");
    }
    else
    {
    System.out.println("given number is even");
    }
}
}
 
 
